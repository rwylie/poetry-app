<img src="/static/images/background2.png" class="img-poem">
<div class="container">
  <div class="row">
    <div class="col s6 offset-s12">
  <form action="/delete/" method="POST">
    <input type="hidden" name="id" value="{{id}}">
  <button class="btn flat deep-orange lighten-3" id="d"><i class="large material-icons"> delete </i> Delete </button>
</form>
</div>
</div>
  <div>
    <div class="col s12 center">
      <div id="poemShow" class="print">
        <h2 class="blue-grey-text lighten-3">{{name}}</h2>
        <h5>  {{#each poem}}
         {{this}} <br>
          {{/each}}
        </h5>
        <!-- <button class="waves-effect waves-yellow deep-orange lighten-3 btn"><i class="material-icons left">print</i>Print</a> -->
      </div>

      <div id="poemEdit" style="display:none">
        <form action="/update_poem/" method="POST">
          <h2><textarea class="textarea1 blue-grey-text lighten-3" name="updateTitle" value="{{name}}" style="height: 1.3em;">{{name}}</textarea></h2>
          <h5>{{#each poem}}
                <textarea class="textarea2" name="line{{@index}}" value="{{this}}"> {{this}} </textarea><br>
              {{/each}}
              <button class="btn" type="submit"><i class="Medium material-icons">save</i>Save</button>
          </h5>
          <input type="hidden" name="id" value="{{id}}">
        </form>
      </div>

        <br>
        <button class="btn flat green lighten-3" id="e" value="{{id}}"><i class="large material-icons"> edit </i> Edit </button>
    </div>
  </div>
</div>

<button class="waves-effect waves-yellow deep-orange lighten-3 btn" onclick="window.print(); return false;"><i class="material-icons left">print</i>Print</a>
