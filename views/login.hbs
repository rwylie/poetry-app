<div class="container">
  <div class="row">
    <div class="col s6 offset-s3 z-depth-1" id="panell">
      <h5 id="title" class="deep-orange accent-2">Login Form</h5>

      <form action="/login" method="POST">
        <div class="input-field" id="username">
          <input  type="text" class="validate" name="username">
          <label for="username">Username</label>
        </div>
        <div class="input-field" id="password">
          <input  type="password" class="validate" name="password">
          <label for="password">Password</label>
        </div>
        <p>
          <input type="checkbox" id="remember"/>
          <label for="remember" id="checkbox" >Remember me</label>
        </p>
        <button type="submit"class="waves-effect waves-light btn amber accent-2" id="loginbtn">Login</button>
      </form>

    </div>
  </div>
</div>
