<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

  <script>
function getSynonyms() {
  var word = document.getElementById("word").value;

  axios.get('http://words.bighugelabs.com/api/2/'+"{{key}}"+'/'+word+'/json')
  .then(function (r) {
    console.log(r);
    if (r.data.noun){
      if (r.data.noun.syn) {
        document.getElementById("nouns").innerHTML = "Nouns: ";
        document.getElementById("nounsHere").innerHTML = r.data.noun.syn;
        }
      }
    else {
      document.getElementById("nouns").innerHTML = "Nouns: ";
      document.getElementById("nounsHere").innerHTML = "No matches";
    }
    if (r.data.adjective){
      if (r.data.adjective.syn) {
        document.getElementById("adjectives").innerHTML = "Adjectives: ";
        document.getElementById("adjectivesHere").innerHTML = r.data.adjective.syn;
        }
      }
    else {
      document.getElementById("adjectives").innerHTML = "Adjectives: ";
      document.getElementById("adjectivesHere").innerHTML = "No matches";
    }
  })
}
function getAntonyms() {
  var word = document.getElementById("word").value;

  axios.get('http://words.bighugelabs.com/api/2/'+"{{key}}"+'/'+word+'/json')
  .then(function (r) {
    console.log(r);
    if (r.data.noun){
      if (r.data.noun.ant) {
        document.getElementById("nouns").innerHTML = "Nouns: ";
        document.getElementById("nounsHere").innerHTML = r.data.noun.ant;
        }
      }
    else {
      document.getElementById("nouns").innerHTML = "Nouns: ";
      document.getElementById("nounsHere").innerHTML = "No matches";
    }
    if (r.data.adjective){
      if (r.data.adjective.ant) {
        document.getElementById("adjectives").innerHTML = "Adjectives: ";
        document.getElementById("adjectivesHere").innerHTML = r.data.adjective.ant;
        }
      }
    else {
      document.getElementById("adjectives").innerHTML = "Adjectives: ";
      document.getElementById("adjectivesHere").innerHTML = "No matches";
    }
  })
}

  </script>
