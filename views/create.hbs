
<div class="container">
  <h3 class="deep-orange-text accent-2">Create a Poem</h3>
  <div class="row">
      <form class="col s12">
        <div class="row">
        <div class="col s12">
          Poem by:
          <div class="input-field inline">
            <input placeholder="Name" id="first_name" type="text" class="validate">
            <label for="first_name"></label>
          </div>
        </div>
      </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="line-1" type="text">
            <label for="line-1">Line 1</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="line-2" type="text">
            <label for="line-2">Line 2</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="line-3" type="text">
            <label for="line-3">Line 3</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="line-4" type="text">
            <label for="line-4">Line 4</label>
          </div>
        </div>
        <div class="row">
          <div class="col s4">
            <a class="waves-effect waves-light deep-orange accent-2 btn"><i class="material-icons left">print</i>Print</a>
          </div>
          <div class="input-field col s4 deep-orange-text accent-2">
            Word Search:
            <div class="input-field inline">
              <input id="search" type="text">
              <label for="search"></label>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
